@model List<Proyecto_LaboratorioJARAF.Models.Paciente>

@{
    ViewBag.Title = "Index2";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
      
<link href="~/Content/Semantic-UI-CSS-master (1)/Semantic-UI-CSS-master/semantic.css" />

<body id="fondopa">

    <div>
        <h2 style="color:white">LABORATORIO JARAF</h2>
        <div class="boton">
            <ul>
                <li class="nav-item">             
                    <a href="https://localhost:44327/Login/Inicio" class="btn btn-primary"> Inicio </a>
                    <a href="https://localhost:44327/Examenes/Examenes" class="btn btn-primary">Examenes</a>
                    <a href=" https://localhost:44327/Paciente/Create" class="btn btn-primary">Agregar paciente</a>
                    <a href="https://localhost:44327/Paciente/Index2" class="btn btn-primary">pacientes</a>
                    <a href="https://localhost:44327/Cita/CitaNueva" class="btn btn-primary">Hacer cita</a>
                    <a href="https://localhost:44327/Cita/CrearCita" class="btn btn-primary">Ver cita</a>
                </li>
            </ul>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <h4 align="center" style="color:white">Lista de pacientes</h4>

        <div class="container">

            <table class="table table-bordered table-striped">
                <thead>
                    <th>    Id          </th>
                    <th>    Nombre       </th>
                    <th>    Apellido      </th>
                    <th>    Edad        </th>
                    <th>    Direccion    </th>
                    <th>    Telefono   </th>
                </thead>
                <tbody>
                    @foreach (var ok in Model)
                    {
                        <tr style="color:black">
                            <td>@ok.IdPaciente</td>
                            <td>@ok.Nombre</td>
                            <td>@ok.Apellido</td>
                            <td>@ok.Edad</td>
                            <td>@ok.Direccion</td>
                            <td>@ok.Telefono</td>
                        </tr>}
                </tbody>
            </table>
            <button>@Html.ActionLink("Agregar", "Create")</button>
        </div>
    </div>
</body>