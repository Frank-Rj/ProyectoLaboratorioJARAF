@model List<Proyecto_LaboratorioJARAF.Models.CITAS>
@{
    ViewBag.Title = "Crear Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
   
<body id="fondocc">
    <div>
        <h2 id="textot"> LABORATORIO JARAF</h2>

        <div class="container-fluid">             
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="https://localhost:44327/Login/Inicio" class="btn btn-primary"> Inicio </a>
                        <a href="https://localhost:44327/Examenes/Examenes" class="btn btn-primary">Examenes</a>
                        <a href=" https://localhost:44327/Paciente/Create" class="btn btn-primary">Agregar paciente</a>
                        <a href="https://localhost:44327/Paciente/Index2" class="btn btn-primary">pacientes</a>
                        <a href="https://localhost:44327/Cita/CitaNueva" class="btn btn-primary">Hacer cita</a>
                        <a href="https://localhost:44327/Cita/CrearCita" class="btn btn-primary">Ver cita</a>
                    </li>
                </ul>                  
            </div>
    </div>

    <table class="table table-striped">
        <thead>
            <th>Nombre Paciente</th>
            <th>Apellido Paciente</th>
            <th>Edad Paciente</th>
            <th>Direccion</th>
            <th>telefono</th>
            <th>Hora</th>
            <th>Fecha</th>
            <th>Id examen</th>
            <th>Nombre Examen</th>
            <th>Precio Examen</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
             {
                <tr>
                    <td>@item.Paciente.Nombre</td>
                    <td>@item.Paciente.Apellido</td>
                    <td>@item.Paciente.Edad</td>
                    <td>@item.Paciente.Direccion</td>
                    <td>@item.Paciente.Telefono</td>
                    <td>@item.Hora</td>
                    <td>@item.Fecha</td>
                    <td>@item.EXAMENES.IdExamenes</td>
                    <td>@item.EXAMENES.NombreExamen</td>
                    <td>@item.EXAMENES.Precio</td>
                    <td>@Html.ActionLink("Eliminar", "Delete", new { id = item.IdCita })</td>
                    <td>@Html.ActionLink("Actualizar", "Edit", new { id = item.IdCita })</td>
                </tr>
             }
        </tbody>
    </table>
</body>